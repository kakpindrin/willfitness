<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="planning_slot_inherit_form_will_fitness_fields_view" model="ir.ui.view">
        <field name="name">planning.slot.inherit.form.will.fitness.view</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="%(will_this_week_employee_print_coach_planning)d" string="Semaine en cours" class="oe_highlight" type="action"/>
                    <button name="%(will_next_week_employee_print_coach_planning)d" string="Semaine prochaine" class="oe_highlight" type="action"/>
                </header>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_will_fitness_plannings_window">
        <field name="name">Plannings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">planning.slot</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Imprimer Planning" id="will_fitness.impression" parent="will_fitness.menu_root"/>
</odoo>